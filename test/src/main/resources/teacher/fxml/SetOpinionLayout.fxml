<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="/teacher/css/SetOpinionStyle.css"
            fx:controller="example.controller.teacher.SetOpinionController"
            prefHeight="400.0" prefWidth="1900.0">
    <GridPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="450.0"/>

            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="1450.0"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
            <Label alignment="CENTER" prefHeight="70.0" prefWidth="1500.0" text="Say what you want"
                   GridPane.columnIndex="1"/>

            <TextArea fx:id="area" prefWidth="1450" prefHeight="650" promptText="Write it here" GridPane.columnIndex="1"
                      GridPane.rowIndex="1" GridPane.rowSpan="9"/>
            <Label fx:id="one" alignment="CENTER" prefHeight="30.0" prefWidth="450.0" text="Dear users:"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="two" alignment="CENTER" prefHeight="30.0" prefWidth="450.0" text="If you have any questions"
                   GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Label fx:id="three" alignment="CENTER" prefHeight="30.0" prefWidth="450.0" text="please give us feedback"
                   GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <Label fx:id="four" alignment="CENTER" prefHeight="30.0" prefWidth="450.0" text="尊敬的用户:"
                   GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <Label fx:id="five" alignment="CENTER" prefHeight="30.0" prefWidth="450.0" text="如果您有任何问题"
                   GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <Label fx:id="six" alignment="CENTER" prefHeight="30.0" prefWidth="450.0" text="欢迎向我们反馈"
                   GridPane.columnIndex="0" GridPane.rowIndex="6"/>


        </children>

    </GridPane>
    <ButtonBar prefHeight="80" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="100.0">
        <buttons>
            <Button fx:id="cancel" mnemonicParsing="false" onAction="#Cancel" prefHeight="80.0" text="Cancel"/>
            <Button fx:id="commit" mnemonicParsing="false" onAction="#Commit" prefHeight="80.0" text="Commit"/>
        </buttons>
    </ButtonBar>

</AnchorPane>
